pipeline {
    agent any
    tools {
       nodejs 'nodejs'
    } 
    stages {
        stage('Git Checkout') {
            steps {
                git url: "https://github.com/javahometech/reactjs-app/", branch: "main"
            }
        }
        stage('NPM Install') {
            steps {
                sh "npm install"
            }
        }
        stage('Build') {
            steps {
                sh "npm run build"
            }
        }
        stage('S3 Deploy') {
            steps {
                sh "aws s3 sync dist/ s3://prathameshnews3bucket --delete"
            }
        }
    }
}